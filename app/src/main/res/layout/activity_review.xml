<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:layout_marginLeft="8pt"
    android:layout_marginRight="8pt"
    android:orientation="vertical"
    android:gravity="fill_vertical">

    <TextView
        android:theme="@style/MyTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Question"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/questionTextView"
        android:layout_marginTop="8pt"
        android:layout_marginBottom="8pt"
        android:gravity="top" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@android:color/black"/>
    <TextView
        android:theme="@style/MyTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Answer"
        android:id="@+id/answerTextView"
        android:gravity="top"
        android:layout_marginTop="8pt"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="bottom|center_horizontal"
        android:gravity="bottom">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_review_2"
            android:id="@+id/reviewPrevButton" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_review_1"
            android:id="@+id/reviewFlipButton" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_review_3"
            android:id="@+id/reviewNextButton" />
    </LinearLayout>
</LinearLayout>